{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "public/js",
        "target": "ES2017",
        "module": "ES2020",
        "jsx": "react",
        "noImplicitAny": false,
        "removeComments": false,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "lib": ["DOM", "WebWorker", "ES2017"],
        "paths": {
            "style/*": ["style/*"],
            "utils/*": ["src/utils/*"],
            "global/*": ["src/components/global/*"],
            "views/*": ["src/components/views/*"],
            "user/*": ["src/components/user/*"],
            "icons/*": ["src/components/icons/*"],
            "nav/*": ["src/components/nav/*"],
            "types": ["src/typings/types.d.ts"]
        }
    }
}
